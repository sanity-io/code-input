{
  "extends": "./tsconfig.settings",
  "include": ["src"],
  "exclude": [
    "src/**/__fixtures__",
    "src/**/__mocks__",
    "src/**/__workshop__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
