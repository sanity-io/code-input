{
  "name": "@sanity/code-input",
  "version": "6.0.2",
  "description": "Sanity input component for code, powered by CodeMirror",
  "keywords": [
    "sanity",
    "cms",
    "headless",
    "realtime",
    "content",
    "code-input",
    "sanity-plugin",
    "code-editor"
  ],
  "homepage": "https://github.com/sanity-io/code-input#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/code-input/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sanity-io/code-input.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "sanity.json",
    "src",
    "v2-incompatible.js"
  ],
  "scripts": {
    "build": "plugin-kit verify-package --silent && pkg-utils build --strict --check --clean",
    "clean": "rimraf lib",
    "dev": "sanity dev",
    "format": "prettier --write .",
    "link-watch": "plugin-kit link-watch",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "changeset publish",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "watch": "pkg-utils watch --strict"
  },
  "browserslist": "extends @sanity/browserslist-config",
  "prettier": "@sanity/prettier-config",
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/commands": "^6.9.0",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.6",
    "@juggle/resize-observer": "^3.4.0",
    "@lezer/highlight": "^1.2.1",
    "@sanity/icons": "^3.7.4",
    "@sanity/incompatible-plugin": "^1.0.5",
    "@sanity/ui": "^3.1.10",
    "@uiw/codemirror-themes": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "@sanity/browserslist-config": "^1.0.5",
    "@sanity/pkg-utils": "^8.1.21",
    "@sanity/plugin-kit": "^4.0.19",
    "@sanity/prettier-config": "^2.0.1",
    "@sanity/vision": "^4.10.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-gha": "^1.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.5.2",
    "npm-run-all2": "^5.0.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^5.0.5",
    "sanity": "^4.10.3",
    "styled-components": "^6.1.19",
    "ts-jest": "^29.4.5",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "peerDependencies": {
    "react": "^18 || >=19.0.0-0",
    "react-dom": "^18 || >=19.0.0-0",
    "sanity": "^3 || ^4.0.0-0",
    "styled-components": "^5.2 || ^6"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "sanityExchangeUrl": "https://www.sanity.io/plugins/code-input",
  "sanityPlugin": {
    "verifyPackage": {
      "babelConfig": false,
      "tsconfig": false,
      "tsc": false,
      "nodeEngine": false,
      "eslintImports": false
    }
  }
}
